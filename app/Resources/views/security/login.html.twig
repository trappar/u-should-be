<form action="{{ path('login_check') }}" method="post" class="navbar-form navbar-right">
    <div class="form-group">
        <input type="text" class="form-control" name="_username" value="{{ last_username }}" placeholder="Username">
    </div>
    <div class="form-group">
        <input type="text" class="form-control" name="_password" placeholder="Password">
    </div>
    <button type="submit" class="btn btn-default">Sign In</button>
</form>
{% if error %}
    <div class="security-error">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}